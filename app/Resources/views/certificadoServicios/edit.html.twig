                            label: 'Confirmar',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'Cancelar',
                            className: 'btn-success'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            let recurso;
                            let id;
                            id = $("#formCertificadoServicios_id").val();
                            recurso = Routing.generate("deleteCertificadoServicios", {"id": id}, true);
                            window.location = recurso;
                        }
