<div class="container" width="800px">
    {{ form_start (form,{'action':'','method':'POST'}) }}
    <div class="panel panel-default">
        <div class="panel-heading"> Identificaci√≥n del Centro</div>
        <div style="padding-left: 30px">
            <span><h3>{{ centro.descripcion}}</h3></span>
        </div>
    </div>
    <div id="tabs" class="pestana container">
        <ul class="nav nav-tabs">
            <li><a id="t1" href="#datosGen">Datos Generales</a></li>
            <li><a id="t2" href="#usuarios">Usuarios</a></li>
        </ul>
